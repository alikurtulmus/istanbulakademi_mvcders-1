@using istanbulakademi_mvcders_1.Models
@model List<doktor_tbl>

@{
    ViewBag.Title = "Doktorlar";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2>Doktorlar</h2>

<table class="table table-bordered">

    <tr>
        <th>Doktor ID</th>
        <th>Doktor Ad</th>
        <th>Doktor Soyad</th>
        <th>Doktor Branş</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.doktorid</td>
            <td>@item.doktorad</td>
            <td>@item.doktorsoyad</td>
            <td>@item.doktorbrans</td>
        </tr>
    }

</table>
<a href="#" class="btn btn-info">Yeni Yolcu Girişi</a>
